<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pass_scroll_cont"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/preference_screen_side_margin"
        android:paddingTop="8dp"
        android:paddingBottom="4dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:fontFamily="sans-serif-light"
            android:paddingTop="4dp"
            android:text="Copyright (&#169;) 2014 Jonas Kalderstam"
            android:textAppearance="@android:style/TextAppearance.Holo.Small"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:fontFamily="sans-serif-light"
            android:paddingTop="8dp"
            android:text="@string/app_about"
            android:textAppearance="@android:style/TextAppearance.Holo.Medium"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:fontFamily="sans-serif-light"
            android:paddingTop="16dp"
            android:text="@string/libraries_used"
            android:textAppearance="@android:style/TextAppearance.Holo.Large"
            android:textColor="@android:color/holo_blue_dark"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:fontFamily="sans-serif-light"
            android:paddingTop="4dp"
            android:text="ActionBar-PullToRefresh (&#169;) Chris Banes"
            android:textAppearance="@android:style/TextAppearance.Holo.Medium"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:fontFamily="sans-serif-light"
            android:paddingTop="4dp"
            android:text="DragSortListView (&#169;) Carl Bauer"
            android:textAppearance="@android:style/TextAppearance.Holo.Medium"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:fontFamily="sans-serif-light"
            android:paddingTop="4dp"
            android:text="ShowcaseView (&#169;) Alex Curran"
            android:textAppearance="@android:style/TextAppearance.Holo.Medium"/>

    </LinearLayout>

</ScrollView>
