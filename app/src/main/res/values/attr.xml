<resources>
    <declare-styleable name="StyledTextView">
        <attr name="linkify" format="boolean" />
        <attr name="styledText" format="string" />
        <attr name="titleRelativeSize" format="float" />
        <attr name="titleFontFamily" format="enum">
            <enum name="robotosans" value="0" />
            <enum name="robotocondensed" value="1" />
            <enum name="robotolight" value="2" />
            <enum name="robotothin" value="3" />
        </attr>
        <attr name="titleFontStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
        </attr>
        <attr name="bodyFontFamily" format="enum">
            <enum name="robotosans" value="0" />
            <enum name="robotocondensed" value="1" />
            <enum name="robotolight" value="2" />
            <enum name="robotothin" value="3" />
        </attr>
        <attr name="secondaryColor" format="color" />
    </declare-styleable>

    <declare-styleable name="GreyableToggleButton">
        <attr name="secondaryColor" />
    </declare-styleable>

    <declare-styleable name="DelegateFrame">
        <attr name="enlargedView" format="reference"/>
    </declare-styleable>

    <!-- Vetted -->
    <attr name="NavDrawerStyle" format="reference"/>
    <attr name="separatorColor" format="color"/>
    <attr name="iconTint" format="color"/>

    <attr name="ic_clear_24dp_active" format="reference"/>
    <attr name="ic_alarm_add_24dp_active" format="reference"/>
    <attr name="ic_alarm_24dp_active" format="reference"/>
    <attr name="ic_reorder_24dp" format="color" />

<!--
    <attr name="selectableItemBackground" format="reference" />-->

    <attr name="isDialog" format="boolean" />

    <!-- Unknown -->
    <attr name="my_list_selector" format="reference" />
    <attr name="my_list_background" format="reference" />

    <attr name="viewpager_bg" format="reference" />

    <attr name="list_item_card_background" format="reference" />

    <attr name="labelAddItemTextColor" format="reference|color" />


    <attr name="TaskListItem" format="reference" />
    <attr name="ListMarginStyle" format="reference"/>

    <attr name="ListHeaderSize" format="reference"/>

</resources>
