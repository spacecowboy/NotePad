    <!-- For DashClock Settings -->
    <!-- This base is overridden for larger displays -->
    <style name="DashClockSettings.Theme.Base"
        parent="android:Theme.Holo.Light">
        <item name="isDialog">false</item>
    </style>

    <style name="DashClockSettings.Theme" parent="DashClockSettings.Theme.Base">
        <item name="android:actionBarStyle">@style/DashClockSettings.ActionBar</item>
        <item name="android:actionOverflowButtonStyle">
            @style/DashClockSettings.ActionButton.Overflow
        </item>
        <!--<item name="android:actionBarItemBackground">@drawable/ab_solid_DashClockSettingstheme</item>-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_ab_back_holo_dark_am</item>
        <!--<item name="android:windowBackground">@android:color
        /transparent</item>-->
        <!--<item name="android:actionBarWidgetTheme">@android:style/Theme.Holo</item>-->
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="DashClockSettings.ActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <!--<item name="android:background">@drawable/ab_solid_DashClockSettingstheme</item>-->
        <item name="android:displayOptions">showTitle</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DashClockSettings.ActionButton.Overflow" parent="android:Widget.Holo.ActionButton.Overflow">
        <!--<item name="android:src">@drawable/ic_action_overflow</item>-->
    </style>

    <style name="GreyableButtonToggle" parent="android:Widget.Holo.Button.Toggle">
        <item name="android:background">@drawable/btn_toggle_bg</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall
        </item>
        <item name="android:gravity">center</item>
        <item name="android:padding">0dp</item>
    </style>

</resources>