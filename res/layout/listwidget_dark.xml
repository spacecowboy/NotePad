<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/widget_margin"
    android:orientation="vertical"
    tools:ignore="HardcodedText" >

    <LinearLayout
        android:id="@+id/widgetHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dark_widget_header"
        android:orientation="horizontal"
        android:padding="0dp" >

        <ImageView
            android:id="@+id/widgetConfigButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:background="@drawable/img_default_selector_dark"
            android:contentDescription="Configure widget"
            android:paddingBottom="8dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="8dp"
            android:src="@drawable/app_icon" />

        <LinearLayout
            android:id="@+id/header_spacer"
            android:layout_width="8dp"
            android:layout_height="fill_parent"
            android:visibility="gone" />

        <TextView
            android:id="@+id/titleButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/img_default_selector_dark"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:paddingBottom="4dp"
            android:paddingLeft="0dp"
            android:paddingRight="4dp"
            android:paddingTop="4dp"
            android:text="@string/loading_widget"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/primary_text_dark" />

        <ImageButton
            android:id="@+id/createNoteButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/img_default_selector_dark"
            android:contentDescription="Create new note"
            android:paddingBottom="4dp"
            android:paddingLeft="0dp"
            android:paddingRight="4dp"
            android:paddingTop="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/content_new_dark" />
    </LinearLayout>

    <ImageView
        android:id="@+id/blueLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:scaleType="fitXY"
        android:src="@drawable/list_div_top_btm_gmail_widget_holo"
        tools:ignore="ContentDescription" />

    <FrameLayout
        android:id="@+id/widget_list_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/dark_widget_bg"
        android:padding="0dp" >

        <ListView
            android:id="@+id/notes_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/transparent"
            android:dividerHeight="1px"
            tools:listitem="@layout/widgetlist_item_dark" />

        <TextView
            android:id="@+id/empty_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/primary_text_dark"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>