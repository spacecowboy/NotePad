<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
         This is a theme that will adjust itself depending on the API version. 
		The default definition is the safe one, using a theme that has always been 
		defined. Look at values-11/styles.xml for a variation that is selected when 
		the holographic theme is available.
    -->
    <style name="ThemeHolo" parent="@android:style/Theme.DeviceDefault">
        <item name="navigation_refresh">@drawable/navigation_refresh_dark </item>
        <item name="action_search">@drawable/action_search_dark </item>
        <item name="action_settings">@drawable/action_settings_dark </item>
        <item name="content_new">@drawable/content_new_dark </item>
        <item name="content_new_event">@drawable/content_new_event_dark </item>
        <item name="content_discard">@drawable/content_discard_dark </item>
        <item name="content_copy">@drawable/content_copy_dark </item>
        <item name="content_paste">@drawable/content_paste_dark </item>
        <item name="content_undo">@drawable/content_undo_dark </item>
        <item name="content_remove">@drawable/content_remove_dark </item>
        <item name="social_share">@drawable/social_share_dark </item>
        <item name="device_access_secure">@drawable/device_access_secure_dark</item>
        <item name="device_access_not_secure">@drawable/device_access_not_secure_dark</item>

        <!-- <item name="my_list_selector">?android:attr/activatedBackgroundIndicator</item> -->
        <!-- activated state doesnt exist before honeycomb -->
        <item name="my_list_selector">@android:color/transparent</item>
        <item name="my_list_background">@android:color/transparent</item>
        <item name="editorBackgroundColor">@android:color/transparent</item>
        <item name="ActionBarDropDownItem">@style/ActionBarDropDownItem.Dark</item>
        <item name="btn_default_selector">@drawable/btn_default_selector_dark</item>
    </style>

    <style name="ThemeHoloLight" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="navigation_refresh">@drawable/navigation_refresh_light </item>
        <item name="action_search">@drawable/action_search_light </item>
        <item name="action_settings">@drawable/action_settings_light </item>
        <item name="content_new">@drawable/content_new_light </item>
        <item name="content_new_event">@drawable/content_new_event_light </item>
        <item name="content_discard">@drawable/content_discard_light </item>
        <item name="content_copy">@drawable/content_copy_light </item>
        <item name="content_paste">@drawable/content_paste_light </item>
        <item name="content_undo">@drawable/content_undo_light </item>
        <item name="content_remove">@drawable/content_remove_light </item>
        <item name="social_share">@drawable/social_share_light </item>
        <item name="device_access_secure">@drawable/device_access_secure_light</item>
        <item name="device_access_not_secure">@drawable/device_access_not_secure_light</item>

        <!-- <item name="my_list_selector">?android:attr/activatedBackgroundIndicator</item> -->
        <item name="my_list_selector">@android:color/transparent</item>
        <item name="my_list_background">@drawable/list_read_holo</item>
        <item name="editorBackgroundColor">@android:color/white</item>
        <item name="ActionBarDropDownItem">@style/ActionBarDropDownItem.Light</item>
        <item name="btn_default_selector">@drawable/btn_default_selector_light</item>
    </style>

