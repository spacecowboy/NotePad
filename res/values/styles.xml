    <style name="ActionBarDropDownItem.Dark" parent="@android:style/Widget.DeviceDefault.DropDownItem.Spinner">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="ActionBarDropDownItem.Light" parent="@android:style/Widget.DeviceDefault.Light.DropDownItem.Spinner">
        <item name="android:textColor">#000000</item>
    </style>

